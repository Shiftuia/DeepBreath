<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aqi_detail_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/good">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/aqi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:minWidth="70dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="14dp"
            android:textColor="@color/primary_text"
            android:textSize="54sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="36" />

        <TextView
            android:id="@+id/aqi_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aqi"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/aqi"
            app:layout_constraintStart_toStartOf="@+id/aqi"
            app:layout_constraintTop_toTopOf="@+id/aqi" />

        <TextView
            android:id="@+id/aqi_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxWidth="100dp"
            android:maxLines="2"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/aqi"
            app:layout_constraintEnd_toEndOf="@+id/aqi"
            app:layout_constraintStart_toStartOf="@+id/aqi"
            tools:text="pre unhealthy" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>